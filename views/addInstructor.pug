extends common/adminLayout

block layout-content 
  .container
    h1.mt-5 Add Instructor
    form(action="/admin/add-instructor/submit" method="post")
      .form-group
        label(for="name") Name:
        input#name.form-control(type="text" name="name" placeholder="Johnson")
      .form-group.mt-3
        label(for="bio") Bio:
        textarea#bio.form-control(name="bio" rows="3" placeholder="XYZ is a certified yoga instructor...")
      .form-group.mt-3
        label(for="imageUrl") Image URL:
        input#imageUrl.form-control(type="url" name="imageUrl" placeholder="https://xxx.xxx.com/photo")
      button.btn.btn-primary.mt-3(type="submit") Add Instructor

    if successMessage
      p#output.text-success.mt-3 #{successMessage}
    if errorMessage
      p#output.text-danger.mt-3 #{errorMessage}

  // Include JavaScript to hide the message after 5 seconds
  script.
    document.addEventListener('DOMContentLoaded', (event) => {
      const output = document.getElementById('output');
      if (output) {
        setTimeout(() => {
          output.style.display = 'none';
        }, 5000); 
      }
    });
